style.
  body {
    margin: 0;
    padding: 0;
    background-color: #17a2b8;
    height: 100vh;
  }
  #login .container #login-row #login-column #login-box {
    margin-top: 120px;
    max-width: 600px;
    height: 320px;
    border: 1px solid #9C9C9C;
    background-color: #EAEAEA;
  }
  #login .container #login-row #login-column #login-box #login-form {
    padding: 20px;
  }
  #login .container #login-row #login-column #login-box #login-form #register-link {
    margin-top: -85px;
  }

#login
  .container
    #login-row.row.justify-content-center.align-items-center
      #login-column.col-md-6
        #login-box.col-md-12
          form#login-form.form(action='/login' method='post')
            h3.text-center.text-info Login
            .form-group
              label.text-info(for='username') Username:
              br
              input#username.form-control(type='text' name='username' value="username")
            .form-group
              label.text-info(for='password') Password:
              br
              input#password.form-control(type='password' name='password' value="password")
            .form-group
              input.btn.btn-info.btn-md(type='submit' name='submit' value='Login')
